pipeline
{
    agent any

    stages 
    {
        stage('Build')
        {
            steps
            {
                echo 'Build this Application through gitSCM '
            }
        }
     stage('Test')
        {
            steps 
            {
                echo 'Test this Application'
            }
        }
     stage('Deploy') 
        {
            steps 
            {
                echo 'Deploy this Appliation'
            }
        }
    }
    post{
        always{
            archiveArtifacts artifacts: 'artifact', followSymlinks: false
        }
    }
}
